<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.AddAmountActivity">

    <EditText
        android:id="@+id/edtPurpose"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_text_style"
        android:ems="10"
        android:hint="Mục đích"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtInputDate"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_text_style"
        android:ems="10"
        android:hint="Ngày"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtInputAmount"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_text_style"
        android:ems="10"
        android:hint="Số tiền"
        android:inputType="textPersonName"
        android:padding="10dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/rdoIsPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
            <RadioButton
                android:id="@+id/rdoPlus"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="40dp"
                android:hint="Thu"
                android:checked="true"
                android:onClick="onTypeRadioChecked"></RadioButton>

            <RadioButton
                android:id="@+id/rdoSub"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:hint="Chi"
                android:onClick="onTypeRadioChecked"></RadioButton>
            </RadioGroup>

        </LinearLayout>

    <Button
        android:onClick="saveAmount"
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#219653"
        android:text="thêm"
        android:textAllCaps="true"></Button>
</LinearLayout>